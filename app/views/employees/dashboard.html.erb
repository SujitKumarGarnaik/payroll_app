<div class="container mt-4">
  <h1 class="mb-3 text-center"><%= @employee.name %> Dashboard</h1>

  <div class="card shadow-lg p-4">
    <div class="row">
      <div class="col-md-6">
        <p><strong>Employee Id:</strong> <%= @employee.employee_id %></p>
        <p><strong>Name:</strong> <%= @employee.name %></p>
        <p><strong>Age:</strong> <%= @employee.age %></p>
        <p><strong>Phone Number:</strong> <%= @employee.phone_number %></p>
        <p><strong>Salary:</strong> $<%= @employee.salary %></p>
        <p><strong>Email:</strong> <%= @employee.email %></p>
      </div>
      <div class="col-md-6">
        <p><strong>Gender:</strong> <%= @employee.gender %></p>
        <p><strong>Designation:</strong> <%= @employee.designation %></p>
        <p><strong>Address:</strong> <%= @employee.address %></p>
        <p><strong>Date of Birth:</strong> <%= @employee.date_of_birth.strftime('%d-%m-%Y') %></p>
        <p><strong>Date of Joining:</strong> <%= @employee.date_of_joining.strftime('%d-%m-%Y') %></p>
      </div>
    </div>
  </div>

  <div class="mt-3 text-center">
    <%= link_to "Edit Details", edit_employee_path(@employee.id), class: "btn btn-warning mx-2" %>
    <%= link_to "View Payslip", generate_payslip_employee_path(@employee), target: "_blank", class: "btn btn-primary mx-2" %>
  </div>
</div>
