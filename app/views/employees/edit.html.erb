<div class="container mt-4">
  <h1 class="mb-4 text-center">Edit Profile</h1>

  <div class="card shadow-lg p-4">
    <%= form_with(model: @employee, local: true) do |f| %>
      
      <div class="row">
        <div class="col-md-6">
          <div class="form-group mb-3">
            <%= f.label :name, class: "form-label fw-bold" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :employee_id, "Employee ID" %>
            <%= f.text_field :employee_id, required: true, class: "form-control" %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :email, class: "form-label fw-bold" %>
            <%= f.email_field :email, class: "form-control", readonly: true %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :phone_number, class: "form-label fw-bold" %>
            <%= f.text_field :phone_number, class: "form-control" %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :age, class: "form-label fw-bold" %>
            <%= f.number_field :age, class: "form-control" %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :gender, class: "form-label fw-bold" %><br>
            <div class="form-check form-check-inline">
              <%= f.radio_button :gender, 'Male', class: "form-check-input" %>
              <label class="form-check-label">Male</label>
            </div>
            <div class="form-check form-check-inline">
              <%= f.radio_button :gender, 'Female', class: "form-check-input" %>
              <label class="form-check-label">Female</label>
            </div>
            <div class="form-check form-check-inline">
              <%= f.radio_button :gender, 'Other', class: "form-check-input" %>
              <label class="form-check-label">Other</label>
            </div>
          </div>

          <div class="form-group mb-3">
            <%= f.label :designation, class: "form-label fw-bold" %>
            <%= f.text_field :designation, class: "form-control" %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group mb-3">
            <%= f.label :address, class: "form-label fw-bold" %>
            <%= f.text_area :address, class: "form-control", rows: 3 %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :salary, class: "form-label fw-bold" %>
            <%= f.number_field :salary, class: "form-control" %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :date_of_birth, class: "form-label fw-bold" %>
            <%= f.date_select :date_of_birth, start_year: 1950, end_year: Date.today.year, class: "form-select" %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :date_of_joining, class: "form-label fw-bold" %>
            <%= f.date_select :date_of_joining, start_year: 1950, end_year: Date.today.year, class: "form-select" %>
          </div>
        </div>
      </div>

      <div class="text-center mt-3">
        <%= f.submit "Update Profile", class: "btn btn-success px-4" %>
        <%= link_to "Back", request.referer || admin_dashboard_path, class: "btn btn-secondary ms-2 px-4" %>
      </div>

    <% end %>
  </div>
</div>
