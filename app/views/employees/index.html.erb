<div class="container mt-4">
  <h1 class="mb-4 text-center">All Employees</h1>

  <div class="card shadow-lg p-4">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>Employee Id </th>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Salary</th>
            <th>Date of Joining</th>
            <th>Date of Birth</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @employees.each do |employee| %>
            <tr>
              <td><%= employee.employee_id %></td>
              <td><%= employee.name %></td>
              <td><%= employee.email %></td>
              <td><%= employee.address %></td>
              <td>â‚¹ <%= number_to_currency(employee.salary, unit: "", delimiter: ",") %></td>
              <td><%= employee.date_of_joining.strftime("%d-%m-%Y") if employee.date_of_joining %></td>
              <td><%= employee.date_of_birth.strftime("%d-%m-%Y") if employee.date_of_birth %></td>
              <td>
                <%= link_to "Edit", edit_employee_path(employee), class: "btn btn-warning btn-sm me-2" %>
                <%= link_to "View", employee_path(employee), class: "btn btn-info btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
