<div class="container mt-4">
  <h1 class="text-center mb-4">Create Your Employee Profile</h1>

  <div class="card shadow-lg p-4">
    <%= form_with(model: @employee, local: true) do |f| %>
      
      <div class="mb-3">
        <%= f.label :employee_id, "Employee ID" %>
        <%= f.text_field :employee_id, required: true, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Enter your full name", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control", readonly: true, value: current_user.email %>
      </div>

      <div class="mb-3">
        <%= f.label :phone_number, class: "form-label" %>
        <%= f.text_field :phone_number, class: "form-control", placeholder: "Enter your phone number", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :age, class: "form-label" %>
        <%= f.number_field :age, class: "form-control", min: 18, max: 70, placeholder: "Enter your age", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :gender, class: "form-label d-block" %>
        <div class="form-check form-check-inline">
          <%= f.radio_button :gender, 'Male', class: "form-check-input", required: true %>
          <%= f.label :gender, "Male", class: "form-check-label" %>
        </div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :gender, 'Female', class: "form-check-input" %>
          <%= f.label :gender, "Female", class: "form-check-label" %>
        </div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :gender, 'Other', class: "form-check-input" %>
          <%= f.label :gender, "Other", class: "form-check-label" %>
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :designation, class: "form-label" %>
        <%= f.text_field :designation, class: "form-control", placeholder: "Enter your job title", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :address, class: "form-label" %>
        <%= f.text_area :address, class: "form-control", rows: 3, placeholder: "Enter your full address", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :salary, class: "form-label" %>
        <%= f.number_field :salary, class: "form-control", min: 0, placeholder: "Enter your salary", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :date_of_birth, class: "form-label" %>
        <%= f.date_select :date_of_birth, start_year: 1950, end_year: Date.today.year, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :date_of_joining, class: "form-label" %>
        <%= f.date_select :date_of_joining, start_year: 1950, end_year: Date.today.year, class: "form-control" %>
      </div>

      <div class="d-flex justify-content-between">
        <%= f.submit "Create Profile", class: "btn btn-primary px-4" %>
        <%= link_to "Back", employee_dashboard_path, class: "btn btn-secondary px-4" %>
      </div>

    <% end %>
  </div>
</div>
